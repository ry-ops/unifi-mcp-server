# UniFi Controller Settings
UNIFI_API_KEY=your_actual_api_key_here
UNIFI_GATEWAY_HOST=YOUR-IP-ADDRESS
UNIFI_GATEWAY_PORT=443
UNIFI_VERIFY_TLS=false

# Legacy credentials (if needed)
UNIFI_USERNAME=YOUR-USERNAME
UNIFI_PASSWORD=YOUR-PASSWORD

# Session and Timeout Settings
UNIFI_TIMEOUT_S=15
UNIFI_SESSION_TIMEOUT_S=3600

# Rate Limiting
UNIFI_RATE_LIMIT_PER_MINUTE=60
UNIFI_RATE_LIMIT_PER_HOUR=1000

# Logging
UNIFI_LOG_LEVEL=INFO
UNIFI_LOG_TO_FILE=true
UNIFI_LOG_FILE=unifi_mcp_audit.log

# Site Manager Settings (optional)
UNIFI_SITEMGR_BASE=https://api.ui.com
UNIFI_SITEMGR_TOKEN=YOUR-SITE-MANAGER-API-KEY
UNIFI_SITEMGR_PREFIX=/v1
